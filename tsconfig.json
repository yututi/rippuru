{
    "compilerOptions": {
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "types",
        "experimentalDecorators": true,
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "dom",
            "es6"
        ],
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "example/*.ts",
        "example/*.vue"
    ],
    "compileOnSave": false,
    "exclude": [
        "node_modules"
    ]
}