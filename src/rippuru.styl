.rippuru-wrapper {
    color: inherit;
    position: absolute;
    top: 0px;
    left: 0px;
    height: 100%;
    width: 100%;
    border-radius: inherit;
    overflow: hidden;
    pointer-events: none;
    contain: strict;

    &__ripple {
        position: absolute;
        border-radius: 50%;
        opacity: 0;
        background-color: currentColor;
    }
}